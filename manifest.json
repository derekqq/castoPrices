{
  "name": "Casto Prices v2.1",
  "version": "2.1",
  "description": "Checks prices in different stores for selected product on Castorama site.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.castorama.pl/*",
    "https://api.kingfisher.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.castorama.pl/*Sprzedawca=Castorama*",
        "https://www.castorama.pl/*.cat*"
      ],
      "js": [
        "jquery-3.6.0.slim.js",
        "checkListPrices.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16inactive.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}